\c 120 43;

mdfiles: {[dir]
    l:os["dir";dir];
    m:({(`file=`$x[1])&("md"~last "\\." vs x[3])}'l)#l;
        d:({`dir=`$x[1]}'l)#l;
    f:3(~[@])'m;
    f,,/o'[3(~[@])'d]
};

bookdir:os "pwd";
lst:mdfiles[bookdir];
strip: {@[{p:*ss[|x;"[^ ]"]; |"c"$p _"x"$|x};x;x]};
error: {format["** % error: `%`:\n%";x[`kind];x[`call];x[`message]]};
myout: reagent[`async];
                   
fnd_ocode: {[file]
    flag::0; .file:file;
    files: "kill|exit|close|plugin|usage|rea[dgc]|load|spawn|table|print|patt";
    f:"c"$read `$":",file;
    if [0<#f ss "\\r"] {sep:"\\r\\n"} else {sep:"\\n"};
    rows: sep vs f;
    {r:x;
     if ["```o"~x] {flag+:1} elif ["```"~x] {flag::0};
     if [x like "]\\("] {{nf: ("\\)" vs x)[0]; if [0=#(system format["head %";bookdir,"/source",nf])[1]]
        {if [not ("/nolink.md"~nf) | (nf like "https") | (flag>0)] 
            {println ""; println["\x1b[1;94;48mRef % in file % is bad.\x1b[0m";nf;.file]}}} each 1_ "]\\(" vs r;}
    }'rows;
    $[file like files;[println ""; 0N!file," need check manualy."; :0]; 0];
    idx: where {res:flag; if ["```o"~x] {flag+:1} elif ["```"~x] {$[flag>0;flag-:1;0]; res:flag}; "b"$res}'rows;
    idx: 1_("*";,*idx) {$[y=1+last last x; .[-1_x;();,;(last x),y]; .[x;();,;,y]]}/1_idx;
    { if [1<#x] {
        rr: {[s] ssr[ssr[s;"&lt";"<"];"&gt";">"]}'rows x;
        evl: rr where {0x6f29~2#"x"$x}'rr;
        if [0<#evl] {
          res: ,/{ .o.out::myout;
                   calc:if [x~"o)"] {enlist ""}
                   elif [0x3b=last "x"$x] {enlist @[{eval parse "c"$2_"x"$x; ""};x;error]}
                   else { ({$[1=#x;,/x;x]} "\n" vs @[{e:eval x; $[0N0~e; ""; repr e]};parse "c"$2_"x"$x;error]) };
		   .o.out::();
		   (,x),(1_-1_{~x~0}{@[{get[x;myout]};10;0]}\1),calc
		   }'evl;
          res: strip'res where ~""~/:res;
          if [~rr~res] {println ""; show file, ": ", format["%..%";*x;_x]; 
                        show rr diff res; 0N!"==Expected=="; show res diff rr; 0N!"==Got=="; println[""];} else {print ".";};
        }
      }
    }'idx;
};

os["cd";getenv[`OHOME]];
{fnd_ocode[x]}'lst;
system "rm -f f.txt";
